---
import Layout from "../../layouts/Layout.astro";
import GraphicSpecies from "../../components/GraphicSpecies.astro";
---

<Layout>
  <h1>Espèces — Page unique avec ancres (slider)</h1>

  <nav class="nav-pills" id="anchors-nav" aria-label="Navigation par espèce">
    <a href="#adelie" class="is-active">Adelie</a>
    <a href="#gentoo">Gentoo</a>
    <a href="#chinstrap">Chinstrap</a>
  </nav>

  <div class="slider" id="slider">
    <section class="slide" id="adelie">
      <GraphicSpecies species="Adelie" title="Adelie" />
    </section>
    <section class="slide" id="gentoo">
      <GraphicSpecies species="Gentoo" title="Gentoo" />
    </section>
    <section class="slide" id="chinstrap">
      <GraphicSpecies species="Chinstrap" title="Chinstrap" />
    </section>
  </div>

  <style>
    .slider {
      display: flex;
      overflow-x: auto;
      scroll-snap-type: x mandatory;
      gap: 1rem;
      padding-bottom: 0.5rem;
      scroll-behavior: smooth;
    }
    .slide {
      flex: 0 0 100%;
      min-width: 100%;
      scroll-snap-align: start;
      background: #fff;
      border: 1px solid #eee;
      border-radius: 12px;
      padding: 1rem;
    }
  </style>

  <script>
    const nav = document.getElementById("anchors-nav");
    nav?.addEventListener("click", (e) => {
      const a = e.target.closest('a[href^="#"]');
      if (!a) return;
      const id = a.getAttribute("href").slice(1);
      const el = document.getElementById(id);
      if (!el) return;
      e.preventDefault();
      el.scrollIntoView({
        behavior: "smooth",
        inline: "start",
        block: "nearest",
      });
      for (const link of nav.querySelectorAll("a"))
        link.classList.remove("is-active");
      a.classList.add("is-active");
      history.replaceState(null, "", "#" + id);
    });
  </script>
</Layout>
