---
import Layout from "../../layouts/Layout.astro";
import PlotFigure from "../../components/PlotFigure.astro";
import * as Plot from "@observablehq/plot";
import penguins from "../../assets/penguins.json";

const data = penguins.filter(({ species }) => species === "Gentoo");
---

<Layout title="Gentoo — Espèces">
  <h1>Espèce : Gentoo</h1>

  <nav class="links" aria-label="Espèces">
    <a href="/species/Adelie">Adelie</a>
    <a href="/species/Gentoo">Gentoo</a>
    <a href="/species/Chinstrap">Chinstrap</a>
  </nav>

  <div class="card" style="margin-top:.75rem;">
    <PlotFigure
      options={{
        marks: [
          Plot.dot(
            data.filter((d) => d.culmen_length_mm && d.culmen_depth_mm),
            { x: "culmen_length_mm", y: "culmen_depth_mm", stroke: "sex", r: 3 }
          ),
        ],
      }}
    />
  </div>
</Layout>
