---
import Layout from "../../layouts/Layout.astro";
import PlotFigure from "../../components/PlotFigure.astro";
import * as Plot from "@observablehq/plot";
import penguins from "../../assets/penguins.json";

const penguinsAdelie = penguins.filter(({ species }) => species === "Adelie");
---

<Layout>
  <h1 class="text-2xl">Espèce : Adelie</h1>

  <!-- petit menu inter-espèces (provisoire) -->
  <p>
    <a href="/species/Adelie">Adelie</a> ·
    <a href="/species/Gentoo">Gentoo</a> ·
    <a href="/species/Chinstrap">Chinstrap</a>
  </p>

  <PlotFigure
    options={{
      marks: [
        // même base que ton index.astro, mais filtrée sur Adelie
        // (tu peux changer stroke en "sex" si tu veux varier)
        Plot.dot(penguinsAdelie, {
          x: "culmen_length_mm",
          y: "culmen_depth_mm",
          stroke: "species",
        }),
      ],
    }}
  />
</Layout>
